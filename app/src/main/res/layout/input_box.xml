<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff444648">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="1"
            android:id="@+id/input1"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="2"
            android:id="@+id/input2"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="3"
            android:id="@+id/input3"
            android:layout_column="2" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="4"
            android:id="@+id/input4"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="5"
            android:id="@+id/input5"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="6"
            android:id="@+id/input6"
            android:layout_column="2" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="7"
            android:id="@+id/input7"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="8"
            android:id="@+id/input8"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="9"
            android:id="@+id/input9"
            android:layout_column="2" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="X"
            android:id="@+id/inputC"
            android:layout_column="0" />

        <Button
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="&lt;"
            android:id="@+id/inputCancel"
            android:layout_column="1" />

        <CheckBox
            android:layout_width="@dimen/buttwidth"
            android:layout_height="@dimen/buttwidth"
            android:text="S"
            android:id="@+id/scribeCheck"
            android:layout_column="2"
            android:checked="false"
            android:layout_gravity="center" />

    </TableRow>
</TableLayout>
